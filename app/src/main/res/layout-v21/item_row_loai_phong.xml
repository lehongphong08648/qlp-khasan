<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center"
    >



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="@dimen/dp6"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_stt"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:background="@drawable/ic_brightness_1_black_24dp"
            android:gravity="center"
            android:text="1"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorWhile"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp12"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tenTheLoaiPhong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tên Thể Loại Phòng"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_maTheLoaiPhong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mã Thể Loại Phòng"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#000000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/dp16"
                        android:layout_height="@dimen/dp16"
                        android:src="@drawable/money" />

                    <TextView
                        android:id="@+id/tv_gia2hDau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá 2 giờ đầu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp16"
                        android:layout_height="@dimen/dp16"
                        android:layout_marginRight="@dimen/dp6"
                        android:src="@drawable/money" />

                    <TextView
                        android:id="@+id/tv_gia1Ngay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá 1 ngày" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp16"
                        android:layout_height="@dimen/dp16"
                        android:src="@drawable/money" />

                    <TextView
                        android:id="@+id/tv_gia1hTiep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá 1 giờ tiếp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>