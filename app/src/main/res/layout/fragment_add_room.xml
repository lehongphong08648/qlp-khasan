<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp16"
    android:paddingTop="@dimen/dp50"
    android:paddingRight="@dimen/dp16"
    android:paddingBottom="@dimen/dp16"
    tools:context=".ui.systemManager.FragmentAddRoom">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16">

        <EditText
            android:id="@+id/edt_maPhong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã Phòng"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã Thể Lọai Phòng"
        android:textColor="@color/colorAccent"
        />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spMaTlp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16">

        <EditText
            android:id="@+id/edt_tang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tầng"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16">

        <EditText
            android:id="@+id/edt_dvKhac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dịch Vụ Khách"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16">

        <EditText
            android:id="@+id/edt_moTaPhong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô Tả"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhile"
        android:text="Add"
        android:background="@drawable/round_buttom"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/btn_add_Room"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="Cancel"
        android:background="@drawable/round_buttom"
        android:backgroundTint="@color/colorWhile"
        android:id="@+id/btn_cancel_Room"
        />
</LinearLayout>