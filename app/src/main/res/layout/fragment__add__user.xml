<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp16"
    android:paddingTop="@dimen/dp50"
    android:paddingRight="@dimen/dp16"
    tools:context=".ui.systemManager.Fragment_Add_User">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp5">

        <EditText
            android:id="@+id/edt_tenND"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Người Dùng" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp5">

        <EditText
            android:id="@+id/edt_matKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật Khẩu" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp5">

        <EditText
            android:id="@+id/edt_hoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ Tên" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp5">

        <EditText
            android:id="@+id/edt_chucVu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chức Vụ" />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp16">

        <Button
            android:id="@+id/btn_themNguoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp16"
            android:background="@drawable/round_buttom"
            android:backgroundTint="@color/colorAccent"
            android:text="Thêm"
            android:textColor="@color/colorWhile" />

        <Button
            android:id="@+id/btn_huyThemNguoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorWhile"
            android:text="Hủy"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/btn_themNguoiDung"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_themNguoiDung" />

    </LinearLayout>


</LinearLayout>