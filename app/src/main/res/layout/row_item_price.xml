<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="@dimen/margin_button_left_right"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

        <TextView
            android:id="@+id/tv_stt_booking"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:background="@drawable/ic_brightness_1_black_24dp"
            android:gravity="center"
            android:text="1"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorWhile"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp12"
            android:layout_marginLeft="@dimen/dp12"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_button_left_right">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <TextView
                            android:id="@+id/tv_ngayDen_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày Đến"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tv_ngayDi_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding"
                            android:text="Ngày đi"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/padding"
                                android:layout_height="@dimen/padding"
                                android:layout_marginRight="@dimen/margin_bottom_edt"
                                android:src="@drawable/ic_account_circle_black_24dp" />

                            <TextView
                                android:id="@+id/tv_nameClientItem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tên khách hàng" />

                            />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_22dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/padding"
                                android:layout_height="@dimen/padding"
                                android:layout_marginRight="@dimen/margin_bottom_edt"
                                android:src="@drawable/ic_airline_seat_individual_suite_black_24dp" />

                            <TextView
                                android:id="@+id/tv_nameRoomItem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tên phòng" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_22dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/padding"
                                android:layout_height="@dimen/padding"
                                android:layout_marginRight="@dimen/margin_bottom_edt"
                                android:src="@drawable/money" />

                            <TextView
                                android:id="@+id/tv_tienConItem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tiền đặt cọc" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>