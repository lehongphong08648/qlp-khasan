<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp16"
    android:paddingTop="@dimen/dp16"
    android:paddingRight="@dimen/dp16"
    android:paddingBottom="@dimen/dp16">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16">

        <EditText
            android:id="@+id/edt_maTlp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã Thể Loại Phòng" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16">

        <EditText
            android:id="@+id/edt_tenTlp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Thể Loại Phòng" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp16"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edt_gia2hDau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Giá 2 giờ đầu"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp16"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edt_gia1Ngay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Giá 1 ngày"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp16"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edt_gia1hTiep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Giá 1 Giờ Tiếp"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16">

        <EditText
            android:id="@+id/edt_moTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô Tả" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_add_kindOfRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16"
        android:background="@drawable/round_buttom"
        android:backgroundTint="@color/colorAccent"
        android:text="Add"
        android:textColor="@color/colorWhile" />

    <Button
        android:id="@+id/btn_cancel_KindOfRom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_buttom"
        android:backgroundTint="@color/colorWhile"
        android:text="Cancel"
        android:textColor="@color/colorAccent" />

</LinearLayout>