<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="@dimen/margin_button_left_right"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding"
            >

            <TextView
                android:id="@+id/tv_sttRoom"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:background="@drawable/ic_brightness_1_black_24dp"
                android:gravity="center"
                android:text="1"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/colorWhile"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/dp12"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_maPhong"
                        android:text="Tên phòng"
                        android:textColor="#000000"
                        android:textAppearance="?android:textAppearanceMedium"
                        />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tenLp_phong"
                    android:text="Tên thể loại phòng"
                    android:textColor="#000000"
                    android:textAppearance="?android:textAppearanceSmall"
                    />



            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>