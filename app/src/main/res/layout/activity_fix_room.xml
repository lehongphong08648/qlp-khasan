<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context=".ui.systemManager.FixRoomActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16">

        <EditText
            android:id="@+id/edt_fix_maPhong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="Mã Phòng"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16">

        <EditText
            android:id="@+id/edt_fix_idKor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã loại phòng"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16">

        <EditText
            android:id="@+id/edt_fix_tang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tầng"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16">

        <EditText
            android:id="@+id/edt_fix_dvKhac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dịch Vụ Khách"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp16">

        <EditText
            android:id="@+id/edt_fix_moTaPhong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_fix_Room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_edt"
        android:background="@drawable/round_buttom"
        android:backgroundTint="@color/colorAccent"
        android:text="Chỉnh sửa"
        android:textColor="@color/colorWhile" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="Cancel"
        android:background="@drawable/round_buttom"
        android:backgroundTint="@color/colorWhile"
        android:id="@+id/btn_cancel_fix_Room"
        />

</LinearLayout>