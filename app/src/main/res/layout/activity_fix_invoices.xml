<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context=".ui.systemManager.FixInvoicesActivity">

    <com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp12"
        >

    <EditText
        android:id="@+id/edt_tenPhong_ivoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên phòng"
        android:inputType="none"
        android:enabled="false"
        />

</com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp12"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_tenKh_ivoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:enabled="false"
            android:hint="Tên khách hàng" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp12"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_tenND_ivoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:enabled="false"
            android:hint="Tên người dùng" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp12"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_ngayDen_ivoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:enabled="false"
            android:hint="Ngày đến" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp12"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_ngayDi_ivoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:enabled="false"
            android:hint="Ngày đi" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp12"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_tienCoc_ivoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:enabled="false"
            android:hint="Tiền cọc" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp12"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_discount_ivoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:enabled="false"
            android:hint="Discount" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp12"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_total_ivoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:enabled="false"
            android:hint="Tiền ph" />

    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>