<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    app:cardElevation="@dimen/dp6"
    app:cardCornerRadius="@dimen/dp12"
    android:layout_margin="@dimen/padding"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_stt_user"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:background="@drawable/ic_brightness_1_black_24dp"
            android:gravity="center"
            android:text="1"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorWhile"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp12"
            android:layout_marginLeft="@dimen/dp12"
            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_maND_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Mã người dùng"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/tv_chucVu_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="chức vụ"
                android:textAppearance="?android:textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="@dimen/padding"
                    android:layout_height="@dimen/padding"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_22dp"
                    android:text="Họ tên"
                    android:id="@+id/tv_hoTen_user"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >
                <ImageView
                android:layout_width="@dimen/padding"
                android:layout_height="@dimen/padding"
                android:src="@drawable/money"
                />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_22dp"
                    android:text="Mật khẩu"
                    android:id="@+id/tv_matKhau_user"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>